<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="180dp"
    android:minHeight="40dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/widget_background"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/metricTemperatureContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="2dp"
        android:paddingEnd="2dp">

        <FrameLayout
            android:id="@+id/metricTemperatureIconContainer"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/metricTemperatureProgressBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/widget_ring_background"
                android:rotation="-90"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/metricTemperatureProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/widget_ring_progress"
                android:rotation="-90"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/metricTemperatureLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/widget_metric_temperature_emoji"
                android:textColor="@color/widget_on_primary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/metricTemperaturePrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/widget_metric_no_data"
            android:textColor="@color/widget_on_primary"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/metricTemperatureSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/widget_on_primary"
            android:textSize="10sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/metricMemoryContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="2dp"
        android:paddingEnd="2dp">

        <FrameLayout
            android:id="@+id/metricMemoryIconContainer"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/metricMemoryProgressBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/widget_ring_background"
                android:rotation="-90"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/metricMemoryProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/widget_ring_progress"
                android:rotation="-90"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/metricMemoryLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/widget_metric_memory_emoji"
                android:textColor="@color/widget_on_primary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/metricMemoryPrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/widget_metric_no_data"
            android:textColor="@color/widget_on_primary"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/metricMemorySecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/widget_on_primary"
            android:textSize="10sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/metricStorageContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="2dp"
        android:paddingEnd="2dp">

        <FrameLayout
            android:id="@+id/metricStorageIconContainer"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/metricStorageProgressBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/widget_ring_background"
                android:rotation="-90"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/metricStorageProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/widget_ring_progress"
                android:rotation="-90"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/metricStorageLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/widget_metric_storage_emoji"
                android:textColor="@color/widget_on_primary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/metricStoragePrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/widget_metric_no_data"
            android:textColor="@color/widget_on_primary"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/metricStorageSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/widget_on_primary"
            android:textSize="10sp"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>

